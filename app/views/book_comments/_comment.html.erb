<% book.book_comments.each do |book_comment| %>
<div>
<table>
  <tr>
    <td>
      <%=link_to user_path(book.user) do %>
        <%=image_tag book_comment.user.get_profile_image, size:"100x100" %><br>
        <%=book_comment.book.user.name %>
      <% end %>
    </td>
    <td class='ml-5'><%=book_comment.comment %></td>
    <% if book_comment.user_id==current_user.id %>
    <td><%=link_to "Destroy", book_book_comment_path(book_comment.book,book_comment), method: :delete, class: "btn btn-sm btn-danger", remote: true %></td>

    <% end %>
  </tr>
</table>
</div>
<% end %>
<div>
  <%=form_with model:[book,book_comment], local: false do |f| %>
    <%=f.text_area :comment, rows:'5' ,class: "form-control"%></br>
    <%=f.submit "送信" %>
  <% end %>
</div>